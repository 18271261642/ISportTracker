<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ifavor="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:id="@+id/linear_back"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/back"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/iv_back"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/alarm_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/alarm_item_tv_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text="@string/save"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_white"
            />
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="@string/vibration_alarm_clock"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                />
            <com.isport.tracker.view.EasySwitchButton
                android:id="@+id/alarm_item_swbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                ifavor:isOpened="false"
                ifavor:switch_off="@drawable/ios7_switch_off"
                ifavor:switch_on="@drawable/ios7_switch_on"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alarm_item_rela_two"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/alarm_item_tv_time"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alarm_item_rela_three"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/alarm_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_name"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                />
            <EditText
                android:inputType="textVisiblePassword"
                android:id="@+id/alarm_itemt_edt"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="40dp"
                android:singleLine="true"
                android:textColor="@color/darkGray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_toRightOf="@+id/alarm_item_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:textAllCaps="false"
        android:visibility="gone"
        android:id="@+id/alarm_item_btn_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"

        android:padding="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:clickable="true"
        android:textColor="@color/textcolor_seletor"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alarm_item_tv_wed"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Wed"
            android:background="@drawable/text_week_selector"
            android:layout_centerInParent="true"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/alarm_item_tv_thu"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Thu"
            android:background="@drawable/text_week_selector"
            android:layout_toRightOf="@id/alarm_item_tv_wed"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/alarm_item_tv_fri"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Fri"
            android:background="@drawable/text_week_selector"
            android:layout_toRightOf="@id/alarm_item_tv_thu"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/alarm_item_tv_sat"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Sat"
            android:background="@drawable/text_week_selector"
            android:layout_toRightOf="@id/alarm_item_tv_fri"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/alarm_item_tv_tue"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Tue"
            android:background="@drawable/text_week_selector"
            android:layout_toLeftOf="@id/alarm_item_tv_wed"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/alarm_item_tv_mon"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Mon"
            android:background="@drawable/text_week_selector"
            android:layout_toLeftOf="@id/alarm_item_tv_tue"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
        <TextView
            android:clickable="true"
            android:id="@+id/alarm_item_tv_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Sun"
            android:background="@drawable/text_week_selector"
            android:layout_toLeftOf="@id/alarm_item_tv_mon"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
    </RelativeLayout>
</RelativeLayout>