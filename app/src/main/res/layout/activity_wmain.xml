<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">

            <RadioGroup
                android:id="@+id/radio_group_menu_main"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <RadioButton
                    android:id="@+id/radio_button_step"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:drawableTop="@drawable/walk_top_btn"
                    android:gravity="center" />

                <RadioButton
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/radio_button_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/sleep_top_btn"
                    android:gravity="center" />

                <RadioButton
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/radio_button_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/heart_reat_btn"
                    android:gravity="center" />
                <RadioButton
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/radio_button_weightexam"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/weight_exam_btn"
                    android:gravity="center" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <com.isport.tracker.view.CircleImageView
                    android:onClick="onClick"
                    android:id="@+id/wmain_img_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/image_default_user_icon" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="3dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#CCCCCC" />

            <View
                android:id="@+id/view_checked_main"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#FF6D32" />
        </RelativeLayout>
    </LinearLayout>
    <com.isport.tracker.w337b.views.MainViewPager
        android:id="@+id/wmain_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.isport.tracker.w337b.views.MainViewPager>
</LinearLayout>