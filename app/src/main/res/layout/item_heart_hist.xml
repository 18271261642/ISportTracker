<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/item_heart_checkbox"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:button="@null"
        android:background="@drawable/checkbox_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_toRightOf="@id/item_heart_checkbox"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/item_heart_hist_tv_date"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_heart_hist_tv_max"
                android:textSize="16sp"
                android:textColor="@color/percent_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/item_heart_hist_tv_avg"
                android:textSize="16sp"
                android:textColor="#ffff0072"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_heart_hist_tv_min"
                android:textSize="16sp"
                android:textColor="#ff009dff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>